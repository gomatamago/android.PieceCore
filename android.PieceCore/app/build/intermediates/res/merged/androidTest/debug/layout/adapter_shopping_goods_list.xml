            <!--android:textSize="16sp"-->
            <!--android:textColor="@color/theme_text_color"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--/>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
