<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableLayout1" android:stretchColumns="1">

        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/logo_twitter"
                android:layout_width="20dp"
                android:layout_height="20dp"
             />
            <TextView android:text="Twitterに投稿"
                 android:layout_gravity="center"
                 android:textColor="#000000"/>
            <Button
                android:id="@+id/action_start_oauth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="#00000000"
                android:text="投稿する" />

        </TableRow>
        <EditText android:id="@+id/contribute"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:hint="ここに入力" />

        <ImageView
            android:id="@+id/ShowPhoto"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

    </TableLayout>

