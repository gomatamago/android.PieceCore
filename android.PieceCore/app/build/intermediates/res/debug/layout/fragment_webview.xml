<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/base_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_fragment" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:id="@+id/errorMsg"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Error"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/reload"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tweet_corner"
            android:src="@drawable/reload"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:textColor="#30000000"
            android:text="再読み込み"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/shape_wvback_button"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/shape_wvnext_button"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_backCenter"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shape_wvback_button"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_nextCenter"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:src="@drawable/shape_wvnext_button"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_backBottom"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/shape_wvback_button"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_nextBottom"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/shape_wvnext_button"
            android:contentDescription="@null"/>
    </RelativeLayout>>
    
