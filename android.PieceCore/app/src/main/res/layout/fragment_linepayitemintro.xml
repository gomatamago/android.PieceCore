<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background_fragment"
    tools:context=".PayPalFragment" >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textSize="20sp"
            android:gravity="center"/>

        <jp.co.jokerpiece.piecebase.util.DownloadImageView
            android:id="@+id/goodsView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:layout_margin="10dp">
        </jp.co.jokerpiece.piecebase.util.DownloadImageView>



        <TextView
            android:id="@+id/goodsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/priceTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/shoppingTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/layout_good_type"
            android:visibility="gone">

            <TextView
                android:id="@+id/goodTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="40dp"
                android:text="商品様式："
                android:textSize="25dp" />

            <Spinner android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/goodPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="40dp"
                android:text="販売価格："
                android:textSize="25dp" />

            <TextView
                android:id="@+id/goodPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goodsAmountLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/goodsAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="注文個数："
                android:layout_marginLeft="40dp"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/goodsAmountChooseLayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#40a94e"
                    android:text=" ー "
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/stocksText"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:background="@drawable/component_linepay_buyingamount"/>

                <TextView
                    android:id="@+id/plusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" ＋ "
                    android:textColor="#40a94e"

                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="個"

                    android:textSize="25sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/goodsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="在庫なし"
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:textColor="#000000"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/buyItBtn"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/line_buying_button" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>

