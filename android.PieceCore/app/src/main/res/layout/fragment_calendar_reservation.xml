                        <!--android:background="@drawable/shape_edit_text"-->
                        <!--android:textCursorDrawable="@drawable/shape_edit_text_cursor"-->
                        <!--android:layout_weight="1"-->
                        <!--/>-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="時間"
                        android:textColor="@color/black"
                        android:layout_weight="3"/>

                    <EditText
                        android:id="@+id/fragment_reserve_edtxt_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="18:00"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:inputType="time"
                        android:paddingLeft="10dp"
                        android:background="@drawable/shape_edit_text"
                        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="電話番号"
                        android:textColor="@color/black"
                        android:layout_weight="3"/>

                    <EditText
                        android:id="@+id/fragment_reserve_edtxt_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="000-0000-0000"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:background="@drawable/shape_edit_text"
                        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="メールアドレス"
                        android:textColor="@color/black"
                        android:layout_weight="3"/>

                    <EditText
                        android:id="@+id/fragment_reserve_edtxt_mail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="メールアドレス"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:maxLines="1"
                        android:maxLength="40"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:background="@drawable/shape_edit_text"
                        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                        android:layout_weight="1"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="備考"
                        android:textColor="@color/black"
                        android:layout_weight="3"/>

                    <EditText
                        android:id="@+id/fragment_reserve_edtxt_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="備考"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:maxLines="10"
                        android:maxLength="200"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:background="@drawable/shape_edit_text"
                        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                        android:layout_weight="1"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    >

                    <Button
                        android:id="@+id/fragment_reserve_btn_summit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_round_rectangle_blue"
                        android:text="Summit"
                        />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

</FrameLayout>