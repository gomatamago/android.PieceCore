                    <!--<EditText-->
                        <!--android:id="@+id/fragment_reserve_edtxt_date"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:hint="2016-01-01"-->
                        <!--android:textSize="15sp"-->
                        <!--android:textColor="@color/black"-->
