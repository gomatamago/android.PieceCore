<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <View
                android:id="@+id/anchor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="600dp" />

            <LinearLayout
                android:id="@+id/calender_reserve_blur_window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/calender_reserve_txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:text="日にち： "
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="お名前"
                        android:layout_weight="3"/>

                    <EditText
                        android:id="@+id/fragment_reserve_edtxt_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="名前"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:background="@drawable/shape_edit_text"
                        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="人数"
                        android:textColor="@color/black"
                        android:layout_weight="3"/>

                    <EditText
                        android:id="@+id/fragment_reserve_edtxt_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="3"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:background="@drawable/shape_edit_text"
                        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:layout_marginBottom="20dp"-->
