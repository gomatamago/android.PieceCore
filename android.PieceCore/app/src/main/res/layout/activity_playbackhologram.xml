<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_toLeftOf="@+id/replay_layout"
        android:layout_centerInParent="true">
        <TextureView
            android:layout_width="72dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:id="@+id/playback_video4"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/replay_layout"
        android:layout_centerInParent="true">
        <TextureView
            android:layout_width="72dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:id="@+id/playback_video3"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_toRightOf="@+id/replay_layout"
        android:layout_centerInParent="true">
        <TextureView
            android:layout_width="72dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:id="@+id/playback_video2"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_above="@+id/replay_layout"
        android:layout_centerInParent="true">
        <TextureView
            android:layout_width="72dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:id="@+id/playback_video1"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/replay_layout"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="再生する"
            android:textColor="#ffffff"
            android:background="#000000"
            android:id="@+id/replay_btn"
            android:visibility="invisible"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/holo_closeBtn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_close"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>