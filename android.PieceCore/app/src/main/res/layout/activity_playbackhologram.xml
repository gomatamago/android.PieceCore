<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <TextureView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/playback_video4"
        android:rotation="90"
        android:layout_toLeftOf="@+id/replay_layout"
        android:layout_alignTop="@+id/replay_layout"/>

    <TextureView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/playback_video3"
        android:rotation="90"
        android:layout_below="@+id/replay_layout"
        android:layout_alignLeft="@+id/replay_layout"
        />

    <TextureView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/playback_video2"
        android:layout_marginRight="10dp"
        android:rotation="90"
        android:layout_toRightOf="@+id/replay_layout"
        android:layout_alignTop="@+id/replay_layout"/>

    <TextureView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/playback_video1"
        android:layout_above="@+id/replay_layout"
        android:layout_alignLeft="@+id/replay_layout"/>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/replay_layout"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="再生する"
            android:textColor="#ffffff"
            android:background="#000000"
            android:id="@+id/replay_btn"
            android:visibility="invisible"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/holo_closeBtn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_close"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>